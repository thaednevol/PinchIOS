.table__scroll.table__data--filter(id="scroll-{{$ctrl.idTable}}")
  .table__fixed-container
    //- Tabla con cabeceras fijas
    table.table__fixed(border="1" id="fix-{{$ctrl.idTable}}")
      //- Cabecera de la tabla
      thead
        tr
          th(ng-repeat="textHead in $ctrl.labels track by $index")
            span(ng-bind="::textHead")
            i.fa.fa-filter.table__fixed-filter(ng-show="$ctrl.activeFilter" ng-click="$ctrl.actionOpenFilter($event, $index)" ng-class="{'table__fixed-filter--enable': $ctrl.objectFilter[$ctrl.keyFilter[$index]]}")
    .table__fixed-limit
  //- Tabla con datos
  table.table__data(border="1" id="{{$ctrl.idTable}}")
    //- Cabecera de la tabla
    thead
      tr
        th(ng-repeat="textHead in $ctrl.labels track by $index")
          span(ng-bind="::textHead")
    //- Contenido de la tabla
    tbody
      tr(ng-repeat="register in $ctrl.data.registers | filter:$ctrl.objectFilter | limitTo:$ctrl.limitRegister:$ctrl.startLimit track by $index" ng-init="$last && $ctrl.changeLimitRegister()" ng-class="{'table__data--error':$ctrl.data.errors.hasOwnProperty($ctrl.valueRowId(register))}" id="row-{{$index}}")
        td(ng-repeat="textRegister in register track by $index" ng-bind="textRegister || ' '" ng-click="$ctrl.actionSelectCell(this, $event)" ng-mousedown="$ctrl.actionContextMenuCell(this, $event)" ng-class="{'table__data-field--error': $ctrl.data.errors[$ctrl.valueRowId(register)].hasOwnProperty($index + 1), 'table__data--block-cell':$ctrl.cellNoEdit.indexOf($index) !== -1 && $ctrl.cellNoEdit.length > 0}")
