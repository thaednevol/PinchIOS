// Dise√±o para el modulo de contributors
.sett

  &-contributor
    height: 100%;
    &__messagetitle
      color: #1a54a2;
      text-transform: uppercase;
      display: flex;
      align-items: center;
      height: 40px;
      padding-left: 10px;
      font-weight: bold !important;
      font-size: 14px !important;
      justify-content: flex-start;
      border-bottom: 1px solid #b5bdd2;
      i
       font-size: 24px;
       margin-right: 10px;
    &__messages
      justify-content: flex-start !important;
      padding: 10px;
      i
        font-size: 24px;
        margin-right: 10px;
      p
        background: #fff6f6;
        padding: 3px 5px;
        font-size: 12px;
        color: #555;
        margin-top: 1px;
        margin-bottom: 1px;
        font-style: normal;
        margin-left: 10px;
        margin-right: 10px;
    &__messageopts
      background: #fff;
      margin-top: 10px;
      margin-bottom: 10px;
      display: flex;
      &__opt
        height: 100%;
        width: 25%;
        display: flex;
        justify-content: center;
        span
          font-size: 14px;
          font-style: normal;
        a
          cursor: pointer;
          display: flex;
          align-items: center;
          font-size: 13px;
          color: #75818c;
          &:hover
            color: #0079c0;
        i
          margin-right: 6px;
          font-size: 20px;
    &__table-edit
      .table__scroll
        max-height: 250px !important;
      td
        i
          color: red !important;
          margin-right: 4px;
    &__container
      margin-right: -10px;
      padding-right: 10px;
      height: 100%;
    &__error
      position: relative;
      box-sizing: border-box;
      padding-bottom: 10px;
      min-height: 250px;

    &__menu
      font-size: 24px;
      color: #75818c;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%;
      &-item
        padding: 0px 5px;
        border-left: 1px solid #b5bdd2;
        span
          font-size: 11px !important;
          font-style: normal;
          text-transform: none;
          position: absolute;
          background: white;
          border: 1px solid #b5bdd2;
          padding: 5px 18px;
          border-radius: 4px;
          top: -43px;
          left: -47px;
          text-align: center;
          display: none;
        i
          cursor: pointer;
          margin-right: 2px;
          position: relative;
