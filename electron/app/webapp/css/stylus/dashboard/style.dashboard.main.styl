@import "style.dashboard.notification"
@import "style.dashboard.table"

.dashboard

  &__contributor
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #b5bdd2;
    background: white;
    height: 60px;

    &-item
      display: flex;
      flex-direction: column;
      &:nth-child(1)
      &:nth-child(3)
        width: 41%;
      &:nth-child(2)
        width: 16%;
      &:nth-child(1)
        margin-left: 40px;
      & > span:first-child
        color: #1f58a4;
        font-size: 11px;
        text-transform: uppercase;
        font-weight: bold;
      & > span:last-child
        color: #75818c;
        font-size: 13px;
        padding: 4px 10px;
        font-weight: 600;

  &__tables
    display: flex;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
    & > dashboard-table
      width: 50%;
