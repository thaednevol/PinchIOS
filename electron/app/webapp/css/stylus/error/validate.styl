.validate
  padding: 20px 0px;
  height: inherit;

  &__table
    height: inherit;
    &-scroll
      border-top: 1px solid #b5bdd2;
      height: calc(100% - 196px);
      overflow-y: scroll;
      overflow-x: hidden;
      max-height: 360px;

  &__actions
    padding-top: 10px;
    border-top: 1px solid #b5bdd2;
    display: flex;
    justify-content: flex-end;
    & > div
      margin: 0px 10px;
