@import "style.system.fonts"
@import "style.system.buttons.styl"
@import "style.system.loading.styl"
@import "style.system.form.styl"
@import "style.system.tables"

body
html
#app
  margin: 0;
  padding: 0;
  font-size: 12px;
  width: 100%;
  height: 100%;
  user-select: none;
  overflow: hidden;
  font-family: 'OpenSans', sans-serif;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
body
  background: url(../img/background/pattern.png);

// Estilo para aplicar un scroll en toda la aplicación.
.scroll-all
  margin-left: -6px !important;
  overflow-y: scroll !important;
  overflow-x: hidden !important;
  padding-left: 6px !important;
  min-height: 100% !important;

input
option
a
button
select
  &:focus
    outline: none;


.main
  > * > div
      min-height: calc(100% - 163px);
      margin-top: 0px;
      margin-bottom: 10px;


// Modulo de la app
.sy

  // Titulo que se encuentra en cada modulo de la aplciación
  &__title-content
    padding: 17px 20px;
    color: #bababa;
    font-size: 22px;
    border-bottom: 1px solid #b5bdd2;
    background: #fff;
    width: 100%;
    padding-left: 10px;
    box-sizing: border-box;
