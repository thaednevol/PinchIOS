// Estilo para ventana que se sobrepone con el icono de carga
.sy
  &__loading
    background: rgba(255, 255, 255, 0.60);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    span
      text-transform: uppercase;
      margin-top: 5px;
      color: #969696;
      font-weight: 700;
      font-size: 12px;
