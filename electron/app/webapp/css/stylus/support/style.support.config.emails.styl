.support-email
  position: absolute;
  width: 100%;
  height: 100%;
  align-items: center;
  z-index: 999;
  display: flex;
  justify-content: center;
  &__card
    display: flex;
    flex-direction: column;
    background: white;
    width: 700px;
    height: 500px;
    left: calc(50% - 350px);
    top: calc(50% - 250px);
    z-index: 999;
    padding: 10px;
    border-radius: 2px;
    border: 1px solid #b5bdd2;
    align-items: center;
  &__modal
    background: rgba(182, 182, 182, 0.65);
    width: 100%;
    height: 100%;
    position: absolute;
  &__close
    position: relative;
    top: 0px;
    right: 0;
    cursor: pointer;
    width: 100%;
    i
      position: absolute;
      top: -33px;
      right: -28px;
      font-size: 35px;
      color: red;
  &__title
    width: 100%;
    padding-left: 10px;
    padding-bottom: 12px
    border-bottom: 1px solid #b5bdd2;
    color: #bababa;
    font-size: 22px
  &__content
    display: flex;
    width: 100%;
    margin-top: 20px;
    padding-bottom: 20px;
    border-bottom: 1px solid #b5bdd2;
    justify-content: center;
  &__bottons
    display:flex;
    justify-content: flex-end;
    width: 100%;
    padding: 0;
    margin-top: 20px;
    padding-bottom: 20px;
  &__action
    width: 100px;
    margin-left: 5px;
  &__link
    display: flex;
    flex-direction: column;
    width: 30%;
    max-width: 300px;
    min-width: 170px;
  &__count
    width: 100%;
    &-item
      color: #2159a4;
      margin-top: 5px;
      font-size: 13.5px;
      span
        cursor: pointer;
        text-decoration: underline;
      &--select
        font-weight: bold;
  &__form
    display: flex;
    flex-direction: column;
    width: 435px;
    max-width: 435px;
    &-item-one
      display: flex;
      flex-direction: column;
      font-size: 15px;
      font-weight: bold;
      margin-bottom: 8px;
    &-item-two
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      font-size: 14px;
      margin-bottom: 10px;
      align-items: center;
      span
        max-width: 211px;
        min-width: 210px;
        width: 28%;
        margin-right: 10px;
      input
        max-width: 250px;
        width: 70%;
        box-sizing: border-box;
        height: 31px;
        padding: 8px 12px;
        font-size: 13px;
        color: #555;
        background-color: white;
        border-radius: 2px;
        border: 1px solid #B0AFAF;
        box-sizing: border-box;
        &:focus
          border-color: #66afe9 !important;
          box-shadow: inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6);
    // Si se agregan campos vacios o de un formato que no es adecuado
    &--error
      border-color: red !important;
    &-check
      justify-content: flex-start !important;
      input
        max-width: 20px;
        max-height: 20px;
  &__button
    max-width: 210px;
    border: 0px solid #0079c0 !important;
  &__span-button
    font-weight: bold;
